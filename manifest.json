{
    "name" : "Cookie Cleaner",
    "version" : "1.0",
    "author" : "Vinit Shahdeo",
    "description" : "Clean all your cookies in one go!",
    "permissions": [ "cookies","storage", "tabs", "http://*/*", "https://*/*" , "nativeMessaging"],
    "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" },
    "browser_action": {
      "default_title": "Cookie Cleaner",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js","index.js"],
      "persistent": false
    },
    "manifest_version": 2
  }
  